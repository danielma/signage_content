<!DOCTYPE html>
<html>
<head>
  <title>Signage Content</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  
  <div class="topbar">
    <div class="fill">
      <div class="container">
        <a class="brand" href="#">Kona Signage</a>

        <ul class="nav">
          <li class="active"><a href="/">Home</a></li>
        </ul>
        <ul class="nav secondary-nav">
          <li><a href="#signout">Sign Out</a></li>
        </ul>
      </div>
    </div>
  </div>
      
      

      <div class="container">

        <div class="content">
          <div class="row">
            <% if content_for?(:sidebar) -%>
              <div class="span12">
            <% else -%>
              <div class="span16">
            <% end -%>
              <%= yield %>
            </div>
            <% if content_for?(:sidebar) -%>
              <div class="span4">
                <%= yield :sidebar %>
              </div>
            <% end -%>
          </div>
        </div>

        <footer>
          <p>&copy; Daniel Ma and YWAM Kona</p>

        </footer>

      </div> <!-- /container -->

</body>
</html>


